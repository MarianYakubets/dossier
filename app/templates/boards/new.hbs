<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-4">
          {{input type="text" value=model.name class="form-control" placeholder="The name of the Board" autofocus="autofocus"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary" {{action 'save' model}}>Create</button>
        </div>
    </div>
</div>